{
  "mcpServers": {
    "deploy": {
      "command": "${CLAUDE_PLUGIN_ROOT}/../.venv/bin/python3",
      "args": ["${CLAUDE_PLUGIN_ROOT}/servers/deploy_mcp.py"],
      "env": {
        "PYTHONPATH": "${CLAUDE_PLUGIN_ROOT}/.."
      }
    },
    "scribe": {
      "command": "${CLAUDE_PLUGIN_ROOT}/../.venv/bin/python3",
      "args": ["-m", "scribe.notebook.notebook_mcp_server"],
      "env": {
        "PYTHONPATH": "${CLAUDE_PLUGIN_ROOT}/.."
      }
    }
  },
  "agents": ["agents"]
}
